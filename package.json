{
  "name": "drive-indexer",
  "version": "1.0.0",
  "description": "Index external drives for fast offline search",
  "main": "public/electron.js",
  "homepage": "./",
  "author": "You",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron-is-dev": "^2.0.0",
    "uuid": "^9.0.0",
    "sqlite3": "^5.1.6",
    "diskusage": "^1.1.3"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "electron": "^22.0.0",
    "electron-builder": "^24.4.0",
    "cross-env": "^7.0.3",
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "electron-start": "electron .",
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "build": "npm run react-build && electron-builder",
    "build-win": "npm run react-build && electron-builder --win",
    "build-mac": "npm run react-build && electron-builder --mac"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.drive-indexer.app",
    "productName": "Drive Indexer",
    "files": [
      "public/electron.js",
      "public/preload.js",
      "public/database.js",
      "build/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
